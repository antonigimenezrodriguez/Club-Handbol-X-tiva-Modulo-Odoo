		<record model="ir.ui.view" id="view_xativa_equip_tree">
			<field name="name">view_xativa_equip_tree</field>
			<field name="model">xativa.equip</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="equip">
					<field name="nomComercial" />
					<field name="superficie" />
					<field name="categoria" />
					<field name="temporada_id" />
				</tree>
			</field>
		</record>

		<record id="view_xativa_equip_search" model="ir.ui.view">
			<field name="name">view_xativa_equip_search</field>
			<field name="model">xativa.equip</field>
			<field name="arch" type="xml">
					<search>
						<field name="nomComercial"/>
						<field name="categoria"/>
						<filter domain="[('temporada_id.temporada','=','2023-2024')]" name="temporadaActual" string="Temporada Actual"/>
					</search>
			</field>

		</record>

		<record model="ir.ui.view" id="view_xativa_temporada_tree">
			<field name="name">view_xativa_temporada_tree</field>
			<field name="model">xativa.temporada</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="temporada">
					<field name="temporada" />
				</tree>
			</field>
		</record>		
		
		<record model="ir.ui.view" id="view_xativa_esponsor_tree">
			<field name="name">view_xativa_esponsor_tree</field>
			<field name="model">xativa.esponsor</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="esponsor">
					<field name="nomEsponsor" />
					<field name="empresa_id" />
					<field name="importSenseIVA" widget="monetary"/>
					<field name="importAmbIVA" widget="monetary"/>
					<field name="equips_ids" />
					<field name="temporada_id" />
					<field name="cobrat" />
					<field name="persona_id" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="view_xativa_persona_tree">
